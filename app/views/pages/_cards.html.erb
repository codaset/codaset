<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Accountable</th>
    </tr>
  </thead>
  <tbody>
    <% cards.each do |card| %>
      <tr>
        <td><%= card.number %></td>
        <td><%= card.title %></td>
        <td><%= card.accountable_type %>: <%= card.accountable %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
